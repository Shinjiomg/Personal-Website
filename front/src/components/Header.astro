---
const navItems = [
    {
        title: "Inicio",
        url: "/#home",
    },
    {
        title: "Sobre mí",
        url: "/#about",
    },
    {
        title: "Educación",
        url: "/#education",
    },
    {
        title: "Experiencia",
        url: "/#experience",
    },
    {
        title: "Proyectos",
        url: "/#projects",
    },
];
---

<header
    class="fixed z-50 w-full transition-all duration-300 bg-transparent py-4"
    id="header"
>
    <nav class="flex items-center justify-between px-6 max-w-7xl mx-auto">
        <div class="flex lg:flex-1">
            <a href="#home" class="flex items-center space-x-2" data-scroll>
                <div class="relative w-10 h-10">
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-gradient-start to-gradient-end rounded-lg transform hover:rotate-6 transition-transform"
                    >
                    </div>
                    <div
                        class="absolute inset-0.5 bg-gray-900 rounded-lg flex items-center justify-center font-bold text-xl"
                    >
                        <span
                            class="bg-clip-text text-transparent bg-gradient-to-r from-gradient-start to-gradient-end"
                            >&lt;/&gt;</span
                        >
                    </div>
                </div>
                <span
                    class="text-xl font-bold bg-clip-text text-transparent bg-accent"
                >
                    Jhonatan Becerra
                </span>
            </a>
        </div>

        <div class="flex lg:gap-x-8">
            {
                navItems.map(({ title, url }) => (
                    <a href={url} class="relative px-4 py-2 hidden md:block">
                        <span
                            class="relative z-10 text-sm font-medium text-gray-100 transition-colors hover:text-accent"
                            data-scroll
                        >
                            {title}
                        </span>
                    </a>
                ))
            }
            <a href="#contact" class="relative px-4 py-2" data-scroll>
                <span
                    class="relative z-10 py-3 px-6 text-sm font-medium text-gray-100 transition-colors hover:bg-accent/10 hover:text-accent border border-accent rounded-full"
                    >Contacto</span
                >
            </a>
        </div>
    </nav>
</header>

<script>
    const header = document.getElementById("header");
    window.addEventListener("scroll", () => {
        if (window.scrollY > 0) {
            header?.classList.remove("absolute", "bg-transparent");
            header?.classList.add("fixed", "bg-primary/15", "backdrop-blur-lg");
        } else {
            header?.classList.remove(
                "fixed",
                "bg-primary/15",
                "backdrop-blur-lg",
            );
            header?.classList.add("absolute", "bg-transparent");
        }
    });
</script>
