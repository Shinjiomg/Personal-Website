---
import { HomeIcon, UserIcon, AcademicCapIcon, BriefcaseIcon, RocketIcon } from "./assets/Icons";

const navItems = [
    {
        title: "Inicio",
        url: "#home",
        icon: HomeIcon,
        key: "home",
    },
    {
        title: "Sobre mí",
        url: "#about",
        icon: UserIcon,
        key: "about",
    },
    {
        title: "Educación",
        url: "#education",
        icon: AcademicCapIcon,
        key: "education",
    },
    {
        title: "Experiencia",
        url: "#experience",
        icon: BriefcaseIcon,
        key: "experience",
    },
    {
        title: "Proyectos",
        url: "#projects",
        icon: RocketIcon,
        key: "projects",
    },
];
---

<header
    class="fixed top-0 left-0 right-0 z-50 w-full transition-all duration-500"
    id="header"
    role="banner"
>
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" role="navigation" aria-label="Navegación principal">
        <div class="flex items-center justify-between h-16 lg:h-20">
            <!-- Logo -->
                    <a 
                        href="#home" 
                        class="flex items-center space-x-3 group" 
                        data-scroll
                        aria-label="Ir al inicio"
                    >
                <div class="relative w-10 h-10 lg:w-12 lg:h-12">
                    <div class="absolute inset-0 bg-primary rounded-xl blur-sm opacity-50 group-hover:opacity-100 transition-opacity"></div>
                    <div class="relative w-full h-full bg-primary rounded-xl p-0.5">
                        <div class="w-full h-full bg-gray-900 rounded-lg flex items-center justify-center">
                            <img
                                src="/favicon.png"
                                alt="Logo de Jhonatan Becerra"
                                loading="eager"
                                width="32"
                                height="32"
                                class="w-6 h-6 lg:w-8 lg:h-8"
                            />
                        </div>
                    </div>
                </div>
                <span class="text-lg lg:text-xl font-bold text-primary group-hover:text-primary/80 transition-colors">
                    Jhonatan Becerra
                </span>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden lg:flex items-center gap-1">
                {navItems.map(({ title, url, icon: Icon, key }) => (
                    <a 
                        href={url} 
                        class="nav-link group relative px-4 py-2 rounded-lg transition-all duration-300 hover:scale-105 active:scale-95 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-gray-900" 
                        data-scroll
                        data-section={url.replace('#', '')}
                        aria-label={`Ir a ${title}`}
                    >
                        <span class="relative z-10 flex items-center gap-2 text-sm font-medium text-gray-300 group-hover:text-white transition-colors duration-300">
                            <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform group-hover:scale-110">
                                <Icon />
                            </span>
                            <span class="transform group-hover:translate-x-0.5 transition-transform duration-300" data-i18n-nav={key}>{title}</span>
                        </span>
                        <div class="absolute inset-0 bg-primary/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-primary rounded-b-lg opacity-0 transition-opacity duration-300 active-section-indicator"></div>
                    </a>
                ))}
                <a 
                    href="#contact" 
                    class="ml-2 relative px-6 py-2.5 bg-primary text-white rounded-lg font-semibold text-sm hover:shadow-lg hover:shadow-primary/30 transition-all duration-300 hover:scale-105 active:scale-95 click-scale btn-ripple focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-gray-900 overflow-hidden" 
                    data-scroll
                    aria-label="Ir a la sección de contacto"
                >
                    <!-- Shine effect -->
                    <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
                    <span class="relative z-10" data-i18n-nav="contact">Contacto</span>
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-button"
                class="lg:hidden p-2 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-gray-900"
                aria-label="Abrir menú de navegación"
                aria-expanded="false"
                aria-controls="mobile-menu"
            >
                <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div
            id="mobile-menu"
            class="lg:hidden hidden fixed inset-x-4 top-20 bg-gray-900 border border-gray-700 rounded-2xl shadow-2xl backdrop-blur-xl"
        >
            <div class="px-4 py-6 space-y-2">
                {navItems.map(({ title, url, icon: Icon, key }) => (
                    <a
                        href={url}
                        class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:text-white hover:bg-gray-800 transition-all"
                        data-scroll
                    >
                        <Icon />
                        <span class="font-medium" data-i18n-nav={key}>{title}</span>
                    </a>
                ))}
                <a
                    href="#contact"
                    class="flex items-center justify-center gap-2 mt-4 px-4 py-3 bg-primary text-white rounded-lg font-semibold hover:shadow-lg transition-all"
                    data-scroll
                >
                    <span data-i18n-nav="contact">Contacto</span>
                </a>
            </div>
        </div>
    </nav>
</header>

<script>
    const header = document.getElementById("header");
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");

    // Header scroll effect and active section indicator
    const updateActiveSection = () => {
        const scrollY = window.scrollY;
        const sections = ['home', 'about', 'education', 'experience', 'projects', 'contact'];
        const navLinks = document.querySelectorAll('.nav-link');
        
        // Update header background
        if (scrollY > 50) {
            header?.classList.add("bg-gray-900/80", "backdrop-blur-xl", "border-b", "border-gray-800/50");
            header?.classList.remove("bg-transparent");
        } else {
            header?.classList.remove("bg-gray-900/80", "backdrop-blur-xl", "border-b", "border-gray-800/50");
            header?.classList.add("bg-transparent");
        }
        
        // Find active section
        let activeSection = 'home';
        sections.forEach(sectionId => {
            const section = document.getElementById(sectionId);
            if (section) {
                const rect = section.getBoundingClientRect();
                if (rect.top <= 100 && rect.bottom >= 100) {
                    activeSection = sectionId;
                }
            }
        });
        
        // Update nav links
        navLinks.forEach(link => {
            const section = link.getAttribute('data-section');
            const indicator = link.querySelector('.active-section-indicator');
            if (section === activeSection) {
                link.classList.add('text-primary');
                link.classList.remove('text-gray-300');
                indicator?.classList.add('opacity-100');
                indicator?.classList.remove('opacity-0');
            } else {
                link.classList.remove('text-primary');
                link.classList.add('text-gray-300');
                indicator?.classList.remove('opacity-100');
                indicator?.classList.add('opacity-0');
            }
        });
    };
    
    window.addEventListener("scroll", updateActiveSection);
    updateActiveSection(); // Initial call

    // Mobile menu toggle
    mobileMenuButton?.addEventListener("click", () => {
        const isHidden = mobileMenu?.classList.contains("hidden");
        
        if (isHidden) {
            mobileMenu?.classList.remove("hidden");
            menuIcon?.classList.add("hidden");
            closeIcon?.classList.remove("hidden");
            mobileMenuButton?.setAttribute("aria-expanded", "true");
        } else {
            mobileMenu?.classList.add("hidden");
            menuIcon?.classList.remove("hidden");
            closeIcon?.classList.add("hidden");
            mobileMenuButton?.setAttribute("aria-expanded", "false");
        }
    });

    // Close mobile menu when clicking a link
    const mobileLinks = mobileMenu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
            menuIcon?.classList.remove("hidden");
            closeIcon?.classList.add("hidden");
        });
    });
    
    // Update translations when language changes
    function updateHeaderTranslations() {
        const lang = localStorage.getItem('language') || 'es';
        const translations = {
            es: {
                home: 'Inicio',
                about: 'Sobre mí',
                education: 'Educación',
                experience: 'Experiencia',
                projects: 'Proyectos',
                contact: 'Contacto',
            },
            en: {
                home: 'Home',
                about: 'About',
                education: 'Education',
                experience: 'Experience',
                projects: 'Projects',
                contact: 'Contact',
            }
        };
        
        const t = translations[lang as 'es' | 'en'] || translations.es;
        
        // Update navigation items
        document.querySelectorAll('[data-i18n-nav]').forEach((el) => {
            const key = el.getAttribute('data-i18n-nav');
            if (key && t[key as keyof typeof t]) {
                el.textContent = t[key as keyof typeof t];
            }
        });
    }
    
    // Listen for language changes
    window.addEventListener('languagechange', updateHeaderTranslations);
    
    // Update on load
    updateHeaderTranslations();
</script>

<style>
    /* Smooth scroll behavior */
    html {
        scroll-behavior: smooth;
    }
</style>
