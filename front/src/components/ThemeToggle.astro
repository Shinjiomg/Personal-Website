<button
    id="theme-toggle"
    class="fixed top-24 right-8 z-50 p-3 bg-gray-800/80 backdrop-blur-sm border border-gray-700/50 text-gray-300 rounded-full shadow-lg hover:bg-gray-800 hover:text-white hover:border-primary/50 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-gray-900"
    aria-label="Cambiar tema"
    title="Cambiar tema"
>
    <!-- Sun icon (light mode) -->
    <svg id="sun-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>
    <!-- Moon icon (dark mode) -->
    <svg id="moon-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
    </svg>
</button>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.getElementById('theme-toggle');
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');
        const html = document.documentElement;
        
        // Store observer reference and flag - declare early to avoid reference errors
        let themeObserver: MutationObserver | null = null;
        let isApplyingStyles = false; // Flag to prevent infinite loops
        
        // Check for saved theme preference or default to dark
        const currentTheme = localStorage.getItem('theme') || 'dark';
        
        // Apply theme immediately
        html.setAttribute('data-theme', currentTheme);
        
        function updateIcons(isLight: boolean) {
            if (isLight) {
                sunIcon?.classList.remove('hidden');
                moonIcon?.classList.add('hidden');
            } else {
                sunIcon?.classList.add('hidden');
                moonIcon?.classList.remove('hidden');
            }
        }
        
        // Function to remove all theme-related inline styles
        function removeAllThemeStyles() {
            // Find all elements with data-theme-style attribute
            const styledElements = document.querySelectorAll('[data-theme-style]');
            styledElements.forEach((el) => {
                if (el instanceof HTMLElement) {
                    el.removeAttribute('data-theme-style');
                    // Remove with !important by setting to empty and then removing
                    el.style.setProperty('background-color', '', 'important');
                    el.style.setProperty('color', '', 'important');
                    el.style.setProperty('border-color', '', 'important');
                    el.style.removeProperty('background-color');
                    el.style.removeProperty('color');
                    el.style.removeProperty('border-color');
                }
            });
            
            // Also remove inline styles from all elements that might have been styled
            const allElements = document.querySelectorAll('*');
            allElements.forEach((el) => {
                if (el instanceof HTMLElement) {
                    const style = el.style;
                    // Check if element has inline styles that match our theme colors
                    const bgColor = style.getPropertyValue('background-color');
                    const textColor = style.getPropertyValue('color');
                    const borderColor = style.getPropertyValue('border-color');
                    
                    // Remove if it's a light mode color (white/light gray backgrounds, dark text)
                    if (bgColor && (bgColor.includes('255, 255, 255') || bgColor.includes('rgb(255, 255, 255') || bgColor.includes('#ffffff') || bgColor.includes('#f3f4f6') || bgColor.includes('rgba(255, 255, 255'))) {
                        style.setProperty('background-color', '', 'important');
                        style.removeProperty('background-color');
                    }
                    if (textColor && (textColor.includes('#111827') || textColor.includes('#4b5563') || textColor.includes('#6b7280'))) {
                        style.setProperty('color', '', 'important');
                        style.removeProperty('color');
                    }
                    if (borderColor && (borderColor.includes('#e5e7eb') || borderColor.includes('#d1d5db'))) {
                        style.setProperty('border-color', '', 'important');
                        style.removeProperty('border-color');
                    }
                }
            });
            
            // Force a reflow to ensure CSS takes over
            void document.body.offsetHeight;
        }
        
        // Function to apply theme styles dynamically
        function applyThemeStyles(isLight: boolean) {
            if (!isLight) {
                // Disconnect observer if it exists
                if (themeObserver) {
                    themeObserver.disconnect();
                    themeObserver = null;
                }
                // Remove all inline styles
                isApplyingStyles = true;
                removeAllThemeStyles();
                isApplyingStyles = false;
                return;
            }
            
            // Prevent infinite loops
            if (isApplyingStyles) return;
            isApplyingStyles = true;
            
            function applyStyles() {
                // Find all elements with gray backgrounds
                const allElements = document.querySelectorAll('*');
                allElements.forEach((el) => {
                    if (el instanceof HTMLElement) {
                        const classes = el.className;
                        if (typeof classes !== 'string') return;
                        
                        // Skip if already processed or is a gradient/primary
                        if (el.hasAttribute('data-theme-style') ||
                            classes.includes('gradient') || 
                            classes.includes('from-') || 
                            classes.includes('to-') ||
                            el.closest('.bg-primary')) {
                            return;
                        }
                        
                        // Check for gray backgrounds (including opacity variants)
                        if (classes.includes('bg-gray-800') || 
                            classes.includes('bg-gray-900') || 
                            classes.includes('bg-gray-700')) {
                            // Special handling for header
                            if (el.id === 'header' || el.tagName === 'HEADER') {
                                el.style.setProperty('background-color', 'rgba(255, 255, 255, 0.95)', 'important');
                            } else {
                                el.style.setProperty('background-color', 'rgba(255, 255, 255, 0.95)', 'important');
                            }
                            el.setAttribute('data-theme-style', 'bg');
                        }
                        
                        // Special handling for gray-700/50 badges (status badges, tech tags)
                        if (classes.includes('bg-gray-700/50') || classes.includes('bg-gray-700')) {
                            el.style.setProperty('background-color', '#f3f4f6', 'important');
                            el.setAttribute('data-theme-style', 'bg');
                            
                            // Also update text colors in these badges
                            const textElements = el.querySelectorAll('.text-gray-400, .text-gray-300');
                            textElements.forEach((textEl) => {
                                if (textEl instanceof HTMLElement) {
                                    textEl.style.setProperty('color', '#4b5563', 'important');
                                }
                            });
                            
                            // Update direct text color if element itself has gray text
                            if (classes.includes('text-gray-400') || classes.includes('text-gray-300')) {
                                el.style.setProperty('color', '#4b5563', 'important');
                            }
                        }
                        
                        // Check for gray borders (including gray-600)
                        if (classes.includes('border-gray-700') || 
                            classes.includes('border-gray-800') ||
                            classes.includes('border-gray-600')) {
                            el.style.setProperty('border-color', '#d1d5db', 'important');
                            if (!el.hasAttribute('data-theme-style')) {
                                el.setAttribute('data-theme-style', 'border');
                            }
                        }
                        
                        // Check for white text
                        if (classes.includes('text-white') && 
                            !el.closest('button.bg-primary') && 
                            !el.closest('a.bg-primary') &&
                            !el.closest('.bg-primary')) {
                            el.style.setProperty('color', '#111827', 'important');
                            if (!el.hasAttribute('data-theme-style')) {
                                el.setAttribute('data-theme-style', 'text');
                            }
                        }
                        
                        // Check for gray text
                        if (classes.includes('text-gray-300') && !classes.includes('bg-primary')) {
                            el.style.setProperty('color', '#4b5563', 'important');
                            if (!el.hasAttribute('data-theme-style')) {
                                el.setAttribute('data-theme-style', 'text');
                            }
                        }
                        
                        if (classes.includes('text-gray-400') && !classes.includes('bg-primary')) {
                            el.style.setProperty('color', '#6b7280', 'important');
                            if (!el.hasAttribute('data-theme-style')) {
                                el.setAttribute('data-theme-style', 'text');
                            }
                        }
                    }
                });
            }
            
            // Apply immediately
            applyStyles();
            
            // Apply after a short delay for dynamic content (only if not already applying)
            setTimeout(() => {
                if (!isApplyingStyles) {
                    applyStyles();
                }
            }, 100);
            setTimeout(() => {
                if (!isApplyingStyles) {
                    applyStyles();
                }
            }, 500);
            
            // Use MutationObserver for dynamically added content
            if (typeof MutationObserver !== 'undefined') {
                // Disconnect previous observer if exists
                if (themeObserver) {
                    themeObserver.disconnect();
                }
                
                themeObserver = new MutationObserver((mutations) => {
                    // Skip if we're currently applying styles to prevent loops
                    if (isApplyingStyles) return;
                    
                    // Only process if we're in light mode
                    const currentTheme = html.getAttribute('data-theme') || 'dark';
                    if (currentTheme !== 'light') return;
                    
                    // Check if header classes changed
                    const headerChanged = mutations.some(mutation => {
                        if (mutation.target instanceof HTMLElement) {
                            return mutation.target.id === 'header' || 
                                   mutation.target.tagName === 'HEADER' ||
                                   mutation.target.closest('header');
                        }
                        return false;
                    });
                    
                    if (headerChanged && !isApplyingStyles) {
                        isApplyingStyles = true;
                        // Reapply styles to header specifically
                        const header = document.getElementById('header');
                        if (header && header instanceof HTMLElement) {
                            const classes = header.className;
                            if (classes.includes('bg-gray-900/80') || classes.includes('bg-gray-900')) {
                                header.style.setProperty('background-color', 'rgba(255, 255, 255, 0.95)', 'important');
                            }
                            if (classes.includes('border-gray-800/50')) {
                                header.style.setProperty('border-bottom-color', '#e5e7eb', 'important');
                            }
                        }
                        isApplyingStyles = false;
                    }
                });
                
                themeObserver.observe(document.body, {
                    childList: true,
                    subtree: true,
                    attributes: true,
                    attributeFilter: ['class']
                });
                
                // Keep observer active for theme changes while in light mode
            }
            
            isApplyingStyles = false;
        }
        
        // Initialize icons
        updateIcons(currentTheme === 'light');
        
        // Apply theme styles on initial load
        if (currentTheme === 'light') {
            // Use multiple timeouts to ensure DOM is ready
            setTimeout(() => {
                if (!isApplyingStyles) {
                    applyThemeStyles(true);
                }
            }, 50);
            setTimeout(() => {
                if (!isApplyingStyles) {
                    applyThemeStyles(true);
                }
            }, 200);
            setTimeout(() => {
                if (!isApplyingStyles) {
                    applyThemeStyles(true);
                }
            }, 500);
        }
        
        // Toggle on click
        themeToggle?.addEventListener('click', () => {
            const currentThemeAttr = html.getAttribute('data-theme') || 'dark';
            const newTheme = currentThemeAttr === 'light' ? 'dark' : 'light';
            
            // Update theme attribute first
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            
            // Update icons
            updateIcons(newTheme === 'light');
            
            // Apply or remove styles based on theme
            if (newTheme === 'light') {
                applyThemeStyles(true);
            } else {
                // Remove all inline styles to let CSS take over for dark mode
                removeAllThemeStyles();
            }
        });
    });
</script>

<style>
    /* CSS Variables for theme switching */
    :root {
        --bg-card: rgba(31, 41, 55, 0.4);
        --bg-card-hover: rgba(31, 41, 55, 0.5);
        --text-primary-light: #ffffff;
        --text-secondary-light: #d1d5db;
        --text-tertiary-light: #9ca3af;
        --border-card: rgba(55, 65, 81, 0.5);
    }
    
    html[data-theme="light"] {
        color-scheme: light;
        --bg-card: rgba(255, 255, 255, 0.95);
        --bg-card-hover: rgba(255, 255, 255, 1);
        --text-primary-light: #111827;
        --text-secondary-light: #4b5563;
        --text-tertiary-light: #6b7280;
        --border-card: rgba(229, 231, 235, 0.8);
    }
    
    /* Light mode using data-theme attribute */
    html[data-theme="light"] {
        color-scheme: light;
    }
    
    /* Body and main backgrounds */
    html[data-theme="light"] body {
        background-color: #f9fafb !important;
        color: #111827 !important;
    }
    
