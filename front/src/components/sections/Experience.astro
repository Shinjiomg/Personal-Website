---
const experiences = [
    {
        title: "Desarrollador Web",
        company: "Freelance",
        period: "2024 - Actualidad",
        description:
            "Desarrollo de aplicaciones web escalables usando Astro y Solid.js. Liderazgo técnico de un equipo de 3 desarrolladores.",
        achievements: [
            "Desarrollo de proyectos exitosos",
            "Optimización de rendimiento web",
            "Implementación de diseños responsive",
        ],
        technologies: ["Astro", "Solid.js", "JavaScript", "TailwindCSS"],
    },
    {
        title: "Desarrollador Frontend",
        company: "VMO Central SAS",
        period: "2023 - 2024",
        description:
            "Desarrollo y mantenimiento de interfaces de usuario para CRM de Visita Médica. Desarrollo de componentes reutilizables y optimización de rendimiento.",
        achievements: [
            "Desarrollo de componentes reutilizables",
            "Optimización de rendimiento web",
            "Creación de aplicativos web a la medida",
        ],
        technologies: ["Angular", "TypeScript", "SASS", "Git"],
    },
    {
        title: "Desarrollador Mobile IONIC",
        company: "Universidad Nacional",
        period: "2021 - 2022",
        description:
            "Desarrollo de un proyecto de salud como proyecto de grado.",
        achievements: [
            "Co-autor del aplicativo móvil de salud para zonas rurales 'PeriOpera'",
            "Implementación de funciones avanzadas",
            "Desarrollo de componentes reutilizables, interafaces de usuario y menús",
        ],
        technologies: ["IONIC", "TypeScript", "CSS3", "Git"],
    },
];
---

<section id="experience" class="relative py-20 bg-gray-900">
    <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(99,102,241,0.1),transparent_50%)]"
    >
    </div>
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">
                Experiencia Profesional
            </h2>
            <p class="text-lg text-gray-300 max-w-2xl mx-auto">
                Mi trayectoria profesional en el desarrollo frontend y
                tecnologías web.
            </p>
        </div>

        <div class="relative">
            <div
                class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gradient-to-b from-gradient-start to-gradient-end"
            >
            </div>

            <div class="space-y-12">
                {
                    experiences.map((exp, index) => (
                        <div
                            class={`relative ${index % 2 === 0 ? "lg:ml-auto lg:pl-16" : "lg:mr-auto lg:pr-16"} lg:w-1/2`}
                        >
                            <div class="bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
                                <div class="absolute top-6 lg:top-8 -left-3 lg:left-0 lg:-translate-x-full lg:pr-8 flex items-center justify-center">
                                    <div class="w-6 h-6 rounded-full bg-gradient-to-r from-gradient-start to-gradient-end" />
                                </div>

                                <span class="inline-block px-4 py-2 rounded-full text-sm font-medium bg-primary/10 text-accent mb-4">
                                    {exp.period}
                                </span>

                                <h3 class="text-xl font-bold text-white mb-2">
                                    {exp.title}
                                </h3>
                                <h4 class="text-lg font-semibold text-primary mb-4">
                                    {exp.company}
                                </h4>

                                <p class="text-gray-300 mb-4">
                                    {exp.description}
                                </p>

                                <ul class="space-y-2 mb-4">
                                    {exp.achievements.map((achievement) => (
                                        <li class="flex items-start">
                                            <svg
                                                class="w-5 h-5 text-primary mt-1 mr-2"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M5 13l4 4L19 7"
                                                />
                                            </svg>
                                            <span class="text-gray-300">
                                                {achievement}
                                            </span>
                                        </li>
                                    ))}
                                </ul>

                                <div class="flex flex-wrap gap-2">
                                    {exp.technologies.map((tech) => (
                                        <span class="px-3 py-1 bg-gray-700 text-gray-200 rounded-full text-sm">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
