---

<section id="experience" class="relative py-20 min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(59,130,246,0.08),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Section header -->
        <div class="text-center mb-16">
            <span class="inline-block px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-4">
                Trayectoria
            </span>
            <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4">
                <span class="text-white">Experiencia</span>
                <span class="block text-primary">
                    Profesional
                </span>
            </h2>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto">
                Un recorrido por mi evolución como desarrollador frontend
            </p>
        </div>

        <!-- Experience Cards -->
        <div class="space-y-6">
            {experiences.map((exp, index) => (
                <div 
                    class="group relative"
                    style={`animation-delay: ${index * 0.1}s;`}
                >
                    <!-- Glow effect -->
                    <div class="absolute -inset-1 bg-primary/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    
                    <!-- Card -->
                    <div class="relative bg-gray-800/40 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-6 lg:p-8 hover:border-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-primary/10 hover:-translate-y-1">
                        <div class="flex flex-col lg:flex-row lg:items-start gap-6">
                            <!-- Left: Period and Company -->
                            <div class="flex-shrink-0 lg:w-48">
                                <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-primary/10 border border-primary/30 mb-3">
                                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <span class="text-xs font-semibold text-primary">{exp.period}</span>
                                </div>
                                <h4 class="text-lg font-bold text-primary mb-1 group-hover:text-white transition-colors">
                                    {exp.company}
                                </h4>
                            </div>

                            <!-- Right: Content -->
                            <div class="flex-1">
                                <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-primary transition-colors">
                                    {exp.title}
                                </h3>
                                
                                <p class="text-gray-300 mb-5 leading-relaxed">
                                    {exp.description}
                                </p>

                                <!-- Achievements -->
                                <div class="mb-5">
                                    <ul class="space-y-2.5">
                                        {exp.achievements.map((achievement) => (
                                            <li class="flex items-start gap-3">
                                                <div class="mt-1.5 flex-shrink-0">
                                                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                    </svg>
                                                </div>
                                                <span class="text-gray-300 leading-relaxed text-sm">{achievement}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                <!-- Technologies -->
                                <div class="flex flex-wrap gap-2">
                                    {exp.technologies.map((tech) => (
                                        <span class="px-3 py-1.5 bg-gray-700/50 border border-gray-600/50 text-gray-300 rounded-lg text-xs font-medium hover:border-primary/50 hover:text-primary hover:bg-primary/10 transition-all duration-300">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
