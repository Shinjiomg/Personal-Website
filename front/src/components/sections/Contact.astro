---
import { MailIcon, PhoneIcon, LocationIcon } from "../assets/Icons";

const contactInfo = [
    {
        icon: MailIcon,
        title: "Email",
        details: "yonkitas9@gmail.com",
        link: "mailto:yonkitas9@gmail.com",
    },
    {
        icon: PhoneIcon,
        title: "Teléfono",
        details: "+57 301 570 3750",
        link: "tel:+34600123456",
    },
    {
        icon: LocationIcon,
        title: "Ubicación",
        details: "Soacha, Colombia",
        link: "#",
    },
];
---

<section id="contact" class="py-20 bg-gray-900 overflow-hidden">
    <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(99,102,241,0.1),transparent_50%)]"
    >
    </div>
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
            <h2 class="text-4xl sm:text-5xl font-bold mb-4">
                <span class="bg-clip-text text-transparent bg-primary"
                    >Trabajemos Juntos</span
                >
            </h2>
            <p class="text-lg text-gray-300">
                ¿Tienes un proyecto interesante? ¿Hay una oportunidad de trabajo
                en tu empresa? ¡Hablemos!
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-10 items-center">
            <div class="bg-gradient-to-r from-gradient-start/5 to-gradient-end/5 backdrop-blur-sm rounded-xl p-7 border border-gradient-start/20 gap-4">
                <h2
                    class="text-center text-3xl font-bold mb-4 bg-clip-text text-transparent bg-accent"
                >
                    Información de Contacto
                </h2>
                <div>
                    <p class="text-center text-gray-400 mb-6">
                        Estoy disponible para nuevas oportunidades. ¡No dudes en
                        escribirme!
                    </p>
                    <div class="grid md:grid-cols-2 gap-6">
                        {
                            contactInfo.map((item, index) => (
                                <a
                                    href={item.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class={`flex items-start bg-gradient-to-r from-gradient-start/5 to-gradient-end/5 backdrop-blur-sm rounded-xl p-4 border border-gradient-start/20 gap-4 hover:shadow-lg transition-shadow ${
                                        index === 2 ? "md:col-span-2 items-center md:flex md:justify-center" : ""
                                    }`}
                                >
                                    <div class="flex-shrink-0">
                                        <item.icon />
                                    </div>
                                    <div>
                                        <h3 class="font-semibold text-white mb-1">
                                            {item.title}
                                        </h3>
                                        <p class="text-gray-400 group-hover:text-[#63B3ED] transition-colors">
                                            {item.details}
                                        </p>
                                    </div>
                                </a>
                            ))
                        }
                    </div>
                    <button
                        class="mt-8 w-full px-8 py-4 rounded-lg font-medium text-white border border-primary bg-gradient-to-r from-gradient-start/5 to-gradient-end/5 backdrop-blur-sm"
                    >
                        <a class="relative flex items-center justify-center" href="/HV.pdf">
                            Descargar CV
                        </a>
                    </button>
                </div>
            </div>

            <form
                class="bg-gradient-to-r from-gradient-start/5 to-gradient-end/5 backdrop-blur-sm rounded-xl p-5 border border-gradient-start/20 gap-4"
            >
                <div class="space-y-2 mb-4">
                    <label
                        for="name"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                    >
                        Nombre completo
                    </label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="w-full px-4 py-3 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors"
                        required
                    />
                </div>
                <div class="space-y-2">
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                    >
                        Correo electrónico
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-4 py-3 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors"
                        required
                    />
                </div>
                <div class="space-y-2 mb-4">
                    <label
                        for="message"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                    >
                        Mensaje
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="w-full px-4 py-3 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-colors resize-none"
                        required></textarea>
                </div>
                <button
                    type="submit"
                    class="w-full group relative px-8 py-4 rounded-lg font-medium text-white overflow-hidden"
                >
                    <div
                        class="absolute inset-0 bg-primary transition-transform group-hover:scale-105"
                    >
                    </div>
                    <span class="relative flex items-center justify-center">
                        Enviar mensaje
                        <svg
                            class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </span>
                </button>
            </form>
        </div>
    </div>
</section>
