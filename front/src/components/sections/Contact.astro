---
import ContactForm from "../assets/ContactForm";
import { MailIcon, PhoneIcon, LocationIcon } from "../assets/Icons";

const contactInfo = [
    {
        icon: MailIcon,
        title: "Email",
        details: "yonkitas9@gmail.com",
        link: "mailto:yonkitas9@gmail.com",
    },
    {
        icon: PhoneIcon,
        title: "Teléfono",
        details: "+57 301 570 3750",
        link: "tel:+573015703750",
    },
    {
        icon: LocationIcon,
        title: "Ubicación",
        details: "Soacha, Colombia",
        link: "#",
    },
];
---

<section
    id="contact"
    class="relative py-20 min-h-screen flex items-center justify-center"
>
    <!-- Background effects -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(59,130,246,0.08),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Section header -->
        <div class="text-center mb-16">
            <span class="inline-block px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-4" data-i18n-contact="badge">
                Contacto
            </span>
            <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4">
                <span class="text-white" data-i18n-contact="title">¿Interesado en</span>
                <span class="block text-primary" data-i18n-contact="titleHighlight">
                    Contratarme?
                </span>
            </h2>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto" data-i18n-contact="subtitle">
                Estoy buscando nuevas oportunidades laborales. ¡Hablemos sobre cómo puedo aportar valor a tu equipo!
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-stretch">
            <!-- Contact Info - Lado izquierdo -->
            <div class="relative">
                <!-- Glow effect -->
                <div class="absolute -inset-1 bg-primary/20 rounded-2xl blur-xl opacity-50"></div>
                
                <div class="relative h-full bg-gray-800/60 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-8 flex flex-col">
                        <div class="mb-6 flex-shrink-0">
                            <h3 class="text-3xl font-bold text-white mb-2" data-i18n-contact="readyTitle">
                                ¿Listo para conocerme?
                            </h3>
                            <p class="text-gray-400" data-i18n-contact="readyDescription">
                                Estoy disponible para nuevas oportunidades laborales. ¡Hablemos sobre cómo puedo contribuir a tu equipo!
                            </p>
                        </div>
                        
                        <div class="space-y-4 mb-6 flex-grow">
                            {contactInfo.map((item, index) => (
                                <a
                                    href={item.link}
                                    target={item.link !== "#" ? "_blank" : undefined}
                                    rel={item.link !== "#" ? "noopener noreferrer" : undefined}
                                    class="group relative flex items-center gap-4 p-5 bg-gray-800/50 border border-gray-700/50 rounded-xl hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/20 hover:-translate-y-1 active:translate-y-0 card-hover"
                                    style={`animation-delay: ${index * 0.1}s;`}
                                >
                                    <!-- Icon background with gradient -->
                                    <div class="flex-shrink-0 relative">
                                        <div class="absolute inset-0 bg-primary/20 rounded-xl blur-sm opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                        <div class="relative p-3 bg-primary/10 rounded-xl group-hover:bg-primary/20 transition-colors">
                                            <item.icon />
                                        </div>
                                    </div>
                                    
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-bold text-white mb-1 group-hover:text-primary transition-colors" data-i18n-contact={item.title.toLowerCase()}>
                                            {item.title}
                                        </h4>
                                        <p class="text-gray-400 text-sm">
                                            {item.details}
                                        </p>
                                    </div>
                                    
                                    <svg class="w-5 h-5 text-gray-500 opacity-0 group-hover:opacity-100 group-hover:text-primary transition-all duration-300 transform group-hover:translate-x-1 icon-hover" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                            ))}
                        </div>
                        
                        <a
                            href="/HV.pdf"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group w-full inline-flex items-center justify-center gap-3 px-6 py-4 bg-primary text-white rounded-xl font-bold hover:shadow-xl hover:shadow-primary/40 transition-all duration-300 hover:scale-105 flex-shrink-0"
                        >
                            <svg class="w-5 h-5 transform group-hover:translate-y-[-2px] transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <span data-i18n-contact="downloadCV">Descargar CV</span>
                        </a>
                    </div>
            </div>

            <!-- Contact Form - Lado derecho -->
            <div class="relative h-full">
                <!-- Glow effect for form -->
                <div class="absolute -inset-1 bg-primary/20 rounded-2xl blur-xl opacity-50"></div>
                <div class="relative h-full">
                    <ContactForm client:load />
                </div>
            </div>
        </div>
    </div>
</section>
