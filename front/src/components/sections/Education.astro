---
import { AcademicCapIcon } from "../assets/Icons";

const education = [
    {
        title: "Ingeniería de Software",
        institution: "Corporación Universitaria Iberoamericana",
        institutionShort: "Iberoamericana",
        period: "2024 - Actualidad",
        status: "En curso",
        icon: AcademicCapIcon,
        description:
            "Especialización en tecnologías web modernas y arquitectura frontend.",
        courses: [
            "Arquitectura de Aplicaciones Web",
            "Desarrollo Avanzado de Aplicaciones Web",
            "Optimización y Rendimiento Web",
            "Diseño UX/UI",
        ],
    },
    {
        title: "Desarrollo de Software",
        institution: "Universidad de Cundinamarca",
        institutionShort: "UCundinamarca",
        period: "2018 - 2022",
        status: "Completado",
        icon: AcademicCapIcon,
        description:
            "Fundamentos de programación, estructuras de datos y arquitectura de software.",
        courses: [
            "Algoritmos y Estructuras de Datos",
            "Arquitectura de Redes y Sistemas Operativos",
            "Bases de Datos",
            "Desarrollo Web",
        ],
    },
];

const certifications = [
    {
        name: "UX/UI y Prototipado Digital",
        issuer: "Udemy",
        date: "2022",
    },
    {
        name: "Git y GitHub Completo De Cero",
        issuer: "Udemy",
        date: "2022",
    },
    {
        name: "Fundamentos de Programación",
        issuer: "Udemy",
        date: "2022",
    },
];
---

<section
    id="education"
    class="relative py-20 min-h-screen flex items-center justify-center overflow-hidden"
>
    <!-- Background effects -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(59,130,246,0.08),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Section header -->
        <div class="text-center mb-16">
            <span class="inline-block px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-4">
                Formación
            </span>
            <h2 class="text-4xl sm:text-5xl md:text-7xl font-bold mb-4">
                <span class="text-white">Educación y</span>
                <span class="block text-primary">
                    Certificaciones
                </span>
            </h2>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto">
                Mi trayectoria académica y desarrollo profesional continuo
            </p>
        </div>

        <!-- Education Section -->
        <div class="mb-16">
            <h3 class="text-2xl font-bold text-white mb-8">Educación Formal</h3>
            <div class="grid md:grid-cols-2 gap-6">
                {education.map((edu, index) => (
                    <div 
                        class="group relative bg-gray-800/40 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-6 lg:p-8 hover:border-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-primary/10"
                        style={`animation-delay: ${index * 0.1}s;`}
                    >
                        <!-- Glow effect -->
                        <div class="absolute -inset-1 bg-primary/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
                        
                        <div class="relative z-10 h-full flex flex-col">
                            <!-- Header -->
                            <div class="mb-4">
                                <div class="flex items-center gap-2 mb-3 flex-wrap">
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-primary/10 text-primary border border-primary/20">
                                        {edu.period}
                                    </span>
                                    <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                                        edu.status === "En curso" 
                                            ? "bg-green-500/10 text-green-400 border border-green-500/20" 
                                            : "bg-gray-700/50 text-gray-400 border border-gray-600/50"
                                    }`}>
                                        {edu.status}
                                    </span>
                                </div>
                                
                                <!-- Institution Badge -->
                                <div class="flex items-center gap-3 mb-3">
                                    <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-primary/20 to-blue-600/20 border border-primary/30 flex items-center justify-center text-primary group-hover:scale-110 transition-transform duration-300">
                                        {(() => {
                                            const IconComponent = edu.icon;
                                            return (
                                                <div class="w-6 h-6 [&>svg]:w-full [&>svg]:h-full">
                                                    <IconComponent />
                                                </div>
                                            );
                                        })()}
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h4 class="text-xl font-bold text-white mb-1 group-hover:text-primary transition-colors">
                                            {edu.title}
                                        </h4>
                                        <h5 class="text-sm font-semibold text-primary truncate">
                                            {edu.institutionShort}
                                        </h5>
                                    </div>
                                </div>
                                
                                <p class="text-xs text-gray-400 italic">
                                    {edu.institution}
                                </p>
                            </div>

                            <!-- Description -->
                            <p class="text-gray-300 mb-4 leading-relaxed text-sm flex-grow">
                                {edu.description}
                            </p>

                            <!-- Courses -->
                            <div>
                                <h5 class="text-xs font-semibold text-gray-400 mb-2 uppercase tracking-wide">Cursos destacados</h5>
                                <div class="flex flex-wrap gap-2">
                                    {edu.courses.map((course) => (
                                        <span class="px-2.5 py-1 bg-gray-800/50 border border-gray-700/50 text-gray-300 rounded-lg text-xs font-medium hover:border-primary/50 hover:text-primary transition-colors">
                                            {course}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Certifications Section -->
        <div>
            <h3 class="text-2xl font-bold text-white mb-8">Certificaciones</h3>
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {certifications.map((cert, index) => (
                    <div 
                        class="group relative bg-gray-800/40 backdrop-blur-sm border border-gray-700/50 rounded-xl p-6 hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10 hover:-translate-y-1"
                        style={`animation-delay: ${index * 0.1}s;`}
                    >
                        <!-- Glow effect -->
                        <div class="absolute -inset-1 bg-primary/20 rounded-xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
                        
                        <div class="relative z-10">
                            <!-- Badge icon -->
                            <div class="flex items-center gap-3 mb-4">
                                <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-primary/20 to-blue-600/20 border border-primary/30 flex items-center justify-center text-primary group-hover:scale-110 transition-transform duration-300">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                                    </svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h4 class="text-lg font-bold text-white mb-1 group-hover:text-primary transition-colors">
                                        {cert.name}
                                    </h4>
                                    <p class="text-sm text-gray-400">{cert.issuer}</p>
                                </div>
                            </div>
                            
                            <!-- Date badge -->
                            <div class="flex items-center justify-between">
                                <span class="px-3 py-1.5 bg-primary/10 text-primary rounded-lg text-xs font-semibold border border-primary/20">
                                    {cert.date}
                                </span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
